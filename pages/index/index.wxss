/* pages/index/index.wxss */
page {
  height: 100%;
  position: relative;
}
.content {
  background-color: #eff0f1;
  height: 100%;
}
.index-swiper {
  width: 100%;
  height: 515rpx;
}

.slide-image {
  width: 100%;
  height: 515rpx;
}

.tip {
  margin: 20rpx 0;
  padding: 0 28rpx;
  height: 38rpx;
  line-height: 0;
}

.tip image {
  display: inline-block;
  vertical-align: middle;
  width: 138rpx;
  height: 38rpx;
}

.tip text {
  margin-left: 22rpx;
  display: inline-block;
  vertical-align: middle;
  line-height: 38rpx;
  font-size: 22rpx;
  color: #999;
}

.scroll_notice {
  white-space: nowrap;
}

.scroll_notice_item {
  margin-left: 861rpx;
  height: 37rpx;
  font-family: PingFangSC;
  font-size: 26rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  text-align: left;
  color: #333;
}

.scroll_notice_item_bg {
  position: relative;
  margin-left: 20rpx;
  height: 100%;
  display: inline-flex;
}

.scan-code {
  width: 100%;
  text-align: center;
  position: relative;
}

.scan-code image {
  width: 270rpx;
  height: 270rpx;
  margin-top: 80rpx;
}

.scan-text{
  color: #fff;
  font-size: 34rpx;
  display: block;
  position: absolute;
  bottom: 140rpx;
  left: 50%;
  transform: translateX(-50%);
}

radio {
  display: none;
  transform: scale(0.8);
}

.choice {
  overflow: hidden;
  width: 700rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  padding: 30rpx 55rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  background-color: #fff;
  transform: translate(-50%, -50%);
}

.close {
  width: 40rpx;
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

.choice-title {
  text-align: left;
  font-size: 24rpx;
  color: #010101;
  padding: 30rpx 0 20rpx;
  display: block;
  opacity: 0.8;
}

.choice-mode {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.4);
  z-index: 999;
}

.radio-group {
  text-align: left;
  font-size: 32rpx;
}

.radio-group .list {
  height: 78rpx;
  line-height: 78rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 39rpx;
  margin-top: 22rpx;
  text-align: center;
  color: #f8624c;
  font-size: 36rpx;
}

.radio-group .list.active {
  background-color: #f8624c;
  color: #fff;
  border-color: #f8624c;
}

.radio-group .list label {
  display: block;
  height: 100%;
}

.btn-container {
  margin: 60rpx 0;
  clear: both;
  overflow: hidden;
}

.choice button {
  width: 264rpx;
  height: 78rpx;
  font-size: 34rpx;
  padding: 0;
  border: 0;
  color: #666;
  background-color: #f7f7f7;
  border-radius: 39rpx;
  box-sizing: border-box;
}

.choice button::after {
  border: 0; 
}

.choice button.left-btn {
  float: left;
}

.choice button.right-btn {
  background: linear-gradient(#fc7b6e, #fb5f49);
  color: #fff;
  float: right;
}

.choice button.right-btn[disabled] {
  background: linear-gradient(#fc7b6e, #fb5f49);
  color: #fff;
  opacity: 0.7;
}

/* 倒计时 */

.countdown {
  padding-top: 110rpx;
  position: relative;
}

.countdown .time {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 80rpx;
  color: #333;
}

.button {
  width: 338rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 39rpx;
  margin: 80rpx auto 0;
  text-align: center;
  background: linear-gradient(#fc7b6e, #fb5f49);
  color: #fff;
  font-size: 34rpx;
}

.off-title {
  font-size: 40rpx;
  font-weight: 500;
  display: block;
  text-align: center;
  margin-top: 20rpx;
}

.off-choice {
  font-size: 30rpx;
  padding: 10rpx 30rpx;
  line-height: 60rpx;
}

.off-choice text {
  display: block;
}

.off-choice image {
  width: 750rpx;
  height: 366rpx;
}

.off-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.off-choice .signal {
  display: block;
  width: 140rpx;
  height: 200rpx;
  margin: 20px auto;
}

.countdown-tip {
  font-size: 28rpx;
  padding: 20rpx 70rpx;
  text-align: center;
  line-height: 60rpx;
  color: #333;
}

.countdown-tip>text {
  display: block;
}

.regulate {
  color: red;
}

.backwards {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
  background-color: rgba(0,0,0,0.7);
}

.backwards text {
  font-size: 200rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 300rpx;
  line-height: 300rpx;
  height: 300rpx;
  color: #fff;
  background: linear-gradient(#fc7b6e, #fb5f49);
  border-radius: 50%;
}

.tips {
  text-align: left;
  background-color: #f7f7f7;
  color: #999;
  font-size: 22rpx;
  padding: 20rpx 50rpx;
  margin: 0 -55rpx -30rpx;
  position: relative;
}

.tips .black {
  color: #333;
}

.tips .num {
  margin-top: 10rpx;
}

.tips .point {
  position: absolute;
  top: 20rpx;
  left: 32rpx;
  font-size: 50rpx;
  line-height: 0;
  color: #333;
}

.gift {
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  transition: all 1s;
}

.gift.active {
  transform: translate(-50%, -50%) scale(1);
}

.gift .gift-bg {
  width: 485rpx;
  height: 635rpx;
}

.gift .gift-box {
  text-align: center;
  overflow: hidden;
  height: 260rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 140rpx;
}

.gift-box image {
  width: 100rpx;
  height: 100rpx;
  margin: 15rpx 25rpx;
  display: inline-block;
  vertical-align: middle;
}

.close-gift {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  margin: 40rpx auto 0;
}

.red-tips {
  color: #f00;
  font-size: 26rpx;
  padding: 0 28rpx;
  position: absolute;
  top: 10rpx;
  left: 0;
  right: 0;
}

.dialog {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.4);
}

.dialog-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 500rpx;
  padding: 130rpx 20rpx 30rpx;
  background-color: #fff;
  border: 1rpx solid #fb5f49;
  border-radius: 10rpx;
  overflow: hidden;
}

.dialog-title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  background-color:#fb5f49;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

.dialog-content {
  font-size: 30rpx;
  line-height: 48rpx;
  color: #666;
}

.center {
  text-align: center;
}

.dialog-box .button {
  margin-top: 50rpx;
}
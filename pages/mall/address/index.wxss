page {
  height: 100%;
  position: relative;
  background-color: #eff0f1;
}

.list-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 120rpx;
  overflow: auto;
}

.address-li {
  background-color: #fff;
  margin-bottom: 4rpx;
  font-size: 0;
  padding: 25rpx 0 25rpx 25rpx;
}

.address-info {
  color: #666;
  width: 520rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 35rpx;
}

.address-info text {
  display: inline-block;
  vertical-align: bottom;
}

.name {
  font-size: 32rpx;
  margin-right: 40rpx;
}

.address-info text.phone {
  font-size: 28rpx;
  margin-right: 16rpx;
  vertical-align: middle;
}

.address-info text.default {
  background-color: #fce3e2;
  color: #dc4e4a;
  width: 70rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  vertical-align: middle;
}

.address-region {
  font-size: 28rpx;
}

.handle {
  width: 170rpx;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
}

.handle view {
  display: inline-block;
  width: 83rpx;
  font-size: 24rpx;
  height: 34rpx;
  line-height: 34rpx;
  color: #666;
  text-align: center;
  border-left: 2rpx solid #eff0f1;
  vertical-align: middle;
}

.handle view.set-default{
  width: 100%;
  display:block;
  margin-bottom: 12rpx;
  height: 46rpx;
  line-height: 46rpx;
}

.handle view.set-default text {
  height: 38rpx;
  line-height: 38rpx;
  width: 120rpx;
  border: 2rpx solid #dc4e4a;
  color: #dc4e4a;
  display: inline-block;
}

.handle view.remove {
  color: #dc4e4a;
}

.no-list {
  text-align: center;
  padding-top: 150rpx;
}

.no-list image {
  width: 176rpx;
}

.no-list text {
  display: block;
  color: #727272;
  font-size: 28rpx;
  margin-top: 40rpx;
}

.add-btn {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 118rpx;
  line-height: 118rpx;
  font-size: 32rpx;
  color: #dc4e4a;
  text-align: center;
  background-color: #fff;
  box-shadow: 0 0 35rpx #ccc;
}
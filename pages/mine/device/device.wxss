/* pages/mine/device/device.wxss */

page {
  background: #f6f6f6;
}

.scanCode{
  width: 600rpx;
  height:600rpx;
  margin: 50rpx 0;
}

.device-box1 {
  width: 600rpx;
  height: 700rpx;
  background: #fff;
  margin: 40rpx auto;
  box-shadow: #ccc 10rpx 10rpx 10rpx;
  line-height: 80rpx;
  padding: 20rpx;
  font-size: 32rpx;
}

.device-box1 text, .device-box2 text {
  font-size: 36rpx;
  margin-left: 20rpx;
  font-weight: 500;
}

.device-box2 {
  font-size: 32rpx;
  line-height: 50rpx;
  padding-bottom: 20rpx;
}

.device-list {
  background: #fff;
  width: 750rpx;
  height: 225rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #f6f6f6;
  box-shadow: #ccc 10rpx 10rpx 10rpx;
}

.device-box2 .detail {
  font-size: 32rpx;
  color: #5292ff;
}

/* 搜索框 */

.search {
  width: 100%;
  height: 80rpx;
  background: #fd7411;
  padding-top: 20rpx;
}

.search input {
  width: 640rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 auto;
  background: #f6f6f6;
  border-radius: 20rpx;
  padding-left: 25rpx;
  font-size: 30rpx;
  color: #333;
}

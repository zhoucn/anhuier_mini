/* pages/mine/index/index.wxss */

page {
  background-color: #eff0f1;
}

.page-top {
  width: 100%;
  position: relative;
}

.page-top-bg image {
  width: 750rpx;
  height: 370rpx;
}

.page-top-box {
  text-align: center;
  position: absolute;
  top: 46rpx;
  left: 50%;
  transform: translateX(-50%);
}

.page-header {
  margin: 65rpx 26rpx 26rpx;
  padding: 130rpx 0 30rpx;
  background: #fff;
  border-radius: 10rpx;
  position: relative;
}

.user-info {
  position: absolute;
  top: -58rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  vertical-align: middle;
}

.user-info .user-avatar {
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-info .user-avatar image {
  width: 114rpx;
  height: 114rpx;
}

.user-info .nick-name {
  font-size: 26rpx;
  color: #333;
}

.user-avatar {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f6f6f6;
  margin-bottom: 20rpx;
}

.user-avatar image {
  width: 170rpx;
  height: 170rpx;
}

.nick-name {
  text-align: center;
  display: block;
  color: #fff;
  font-size: 30rpx;
}

.login-button {
  padding: 0;
  height: 65rpx;
  line-height: 65rpx;
  width: 152rpx;
  margin: 20rpx auto 0;
  color: #fff;
  font-size: 16px;
}

.list-content {
  margin: 26rpx;
  padding: 0 40rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx #e3e3e3;
  overflow: hidden;
}

.navigator {
  position: relative;
  padding: 0 66rpx;
  height: 104rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-button::after {
  border: none;
}

.nav-button {
  position: relative;
  padding: 0 66rpx;
  height: 104rpx;
  text-align: left;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.navigator text, .nav-button text {
  display: inline-block;
  height: 102rpx;
  line-height: 102rpx;
  font-size: 28rpx;
  color: #666;
}

.navigator .icon, .nav-button .icon {
  width: 26rpx;
  position: absolute;
  left: 6rpx;
  top: 50%;
  transform: translateY(-50%);
}

.navigator .arrow, .nav-button .arrow {
  width: 13rpx;
  height: 23rpx;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.promoiton_box {
  width: 100%;
  display: inline-block;
  font-size: 0;
  vertical-align: middle;
}

.promotion {
  width: 50%;
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
  border-left: 2rpx solid #eff0f1;
}

.promotion .button {
  display: inline-block;
  font-size: 18rpx;
  padding: 0;
  width: 70rpx;
  border-radius: 16rpx;
  border: 1rpx solid #999;
  color: #525ca4;
  height: 32rpx;
  line-height: 32rpx;
}

.promotion .money {
  font-size: 30rpx;
  margin: 8rpx 0;
  display: block;
  color: #ff0000;
}

.promotion .money_type {
  font-size: 22rpx;
  display: block;
  color: #999;
}

.scan-code {
  width: 100%;
  text-align: center;
  position: relative;
}

.scan-code image {
  width: 320rpx;
  height: 320rpx;
}

.order-content {
  height: 150rpx;
  background-color: #eff0f1;
}

.order-content navigator {
  width: 146rpx;
  height: 100%;
  display: inline-block;
  vertical-align: middle;
  background-color: #fff;
}

.order-content navigator.order{
  width: 162rpx;
  margin-left: 4rpx;
}

.order-content navigator image {
  width: 46rpx;
  height: 40rpx;
  display: block;
  margin: 40rpx auto 6rpx auto;
}

.order-content navigator text {
  display: block;
  font-size: 20rpx;
  color: #666;
  text-align: center;
}
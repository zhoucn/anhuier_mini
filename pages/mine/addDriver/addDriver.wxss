/* pages/mine/addDevice/addDevice.wxss */
.add-content {
  overflow: hidden;
  padding: 0 38rpx;
  margin: 40rpx 25rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx #e3e3e3;
}

.form-group, .work-time {
  height: 114rpx;
  line-height: 114rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.form-group label, .work-time label {
  width: 190rpx;
  color: #010101;
  font-size: 30rpx;
  float: left;
  line-height: 114rpx;
}

.form-group input {
  width: 340rpx;
  border: none;
  float: left;
  font-size: 28rpx;
  padding: 0;
  height: 114rpx;
  line-height: 114rpx;
  color: #010101;
}

.form-group input.captcha{
  width:200rpx;
  margin-right:10px;
}

.form-group .captcha-btn{
  width: 132rpx;
  display: inline-block;
  text-align: center;
  color:#888;
  font-size: 20rpx;
  height: 58rpx;
  line-height: 58rpx !important;
  border-radius: 49rpx;
  border: 1rpx solid #e4e2e2;
  position: absolute;
  top: 50%;
  right:0;
  transform: translateY(-50%);
}

.form-group .tip label, .work-time .tip {
  width: 30rpx;
  color: red;
  float: left;
  /* margin-top: 10rpx; */
}

.form-group .tip label, .work-time .tip label {
  width: 30rpx;
  font-size: 23rpx;
  text-align: center;
  height: 50rpx;
}

.title {
  text-align: center;
  font-size: 45rpx;
  margin-top: 20rpx;
  height: 70rpx;
  border-bottom: 2rpx solid #eaeaea;
}

.info-box {
  position: fixed;
  z-index: 999;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  overflow: hidden;
  line-height: 60rpx;
}

.info {
  width: 600rpx;
  height: 800rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  margin: 40rpx auto;
  background: #fff;
  font-size: 30rpx;
}

.info .info-title {
  font-size: 40rpx;
  font-weight: 500;
}

checkbox-group {
  display: inline-block;
}

.checkbox {
  text-align: center;
  margin-top: 20rpx;
}

.checkbox checkbox {
  transform: scale(0.7) translateY(3rpx);
}

navigator {
  display: inline-block;
  color: #1b4d11;
  font-size: 24rpx;
  margin: 14rpx 0 30rpx 0;
}

.submit {
  width: 338rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 39rpx;
  margin: 6rpx auto 0;
  background-color: #fc7160;
  color: #fff;
  font-size: 34rpx;
}

.submit.disabled {
  background: linear-gradient(#fc7b6e, #fb5f49);
  color: #fff;
  opacity: 0.7;
}

.form-group text {
  font-size: 30rpx;
  color: #f63;
  display: block;
  margin-left: 30rpx;
  float: left;
  line-height: 60rpx;
}
